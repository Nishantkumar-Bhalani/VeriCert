{
  "name": "VeriCert",
  "author": "Team Vericert",
  "description": "Diplome verification based on Hyperledger",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.vericert.electron-cra",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    }
  },
  "scripts": {
    "electron-pack": "electron-builder -c.extraMetadata.main=build/electron.js .",
    "start": "concurrently \"BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "crypto": "^1.0.1",
    "fabric-ca-client": "~1.2.0",
    "fabric-client": "^1.3.0",
    "fs": "0.0.1-security",
    "grpc": "^1.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.8"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^4.0.8",
    "electron-builder": "^20.38.5",
    "electron-is-dev": "^1.0.1",
    "wait-on": "^3.2.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
